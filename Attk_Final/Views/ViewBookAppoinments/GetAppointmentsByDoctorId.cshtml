@model IEnumerable<Attk_Final.Models.AppointmentViewModel>

@{
    ViewData["Title"] = "Doctor's Appointments";
}

<h1>Doctor's Appointments</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Appointment ID</th>
            <th>Patient Name</th>
            <th>Appointment Date</th>
            <th>Token Number</th>
            <th>Gender</th>
            <th>Blood Group</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.AppointmentId</td>
                    <td>@appointment.PatientName</td>
                    <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                    <td>@appointment.TokenNumber</td>
                    <td>@appointment.Gender</td>
                    <td>@appointment.BloodGroup</td>
                    <td>@appointment.PhoneNumber</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No Appointments Found</td>
            </tr>
        }
    </tbody>
</table>
